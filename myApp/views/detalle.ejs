<body>
    <main class="main"> 
        <div class="container">

        <div class="centrado">
    
            
            
            <div class="producto-box">
                
                <!-- poner aca el description en un nuevo div y acomodarlo al centro -->

                <div class="foto-box">
                    
                    <div class="foto-box-img-box">
 <!-- ><><><><><><><><><><><><><><><><><><><>ANIADIR EL JPG DE LA FOTO VINCULADO A LA DB<><><><><><><><><><><><><><><><><><><><><><>< -->
                    <img src="/images/products/<%= productDetail.images[1] %> " alt="">
                    </div>
                    <div class="other-img-box">
                        <% for( let i = 0; i < productDetail.images.length; i++ ) { %>
                            <div class="other-img">
                                <img src="/images/products/<%= productDetail.images[i] %> " alt="">
                            </div>


                        <% } %>

                        
                        
                    </div>
                </div>
                    <div class="product-box">
                    <div class="product-box-box">
                        <h1 class="product-title"><%= productDetail.name %> </h1>
                        
                        <div class="padding-top">            
                            <!-- aca va todo lo de la columna de precio -->
                            <div class="precio-box">
                                <% if (productDetail.discount>0) { %>
                                    <div class="precio-total">$<%= productDetail.price %> </div>
                                    <!-- ><><><><><><><><><><><><><><><><PRODUCT.PRICE-PRODUCT.DISCOUNT=VALUE><><><><><><><><><><><><><><>< -->
                                    <div class="precio-final">$<%= ((productDetail.price)-(productDetail.price)*(productDetail.discount/100)) %> </div>
                                
                                <% } else { %>
                                 
                                <!-- ><><><><><><><><><><><><><><><><PRODUCT.PRICE><><><><><><><><><><>< -->
                                    <div class="precio-final">$<%= productDetail.price %> </div>             
                                    <% } %>
                            </div>
                              <!--   ><><><><><><><><><><><><><><><><>ESTE FORM NECESITA UN ACTION<><><><><><><><><><><><><><><><><><><><><><>< -->
                            <form action="" class="carrito-hud">
                                <div class="carrito-box-amount">
                                    <label for="">Quantity</label>
                                </div>
                                
                                <div class="button-add-less">
                                    <button type="plus"><span>+</span></button>
                                    <input type="text" id="Quantity" class="numberofproducts">
                                    <button type="minus"><span>-</span></button>
                                </div>

                                <div class="formas-productos">
                                    <div class="forma-producto">
                                        <!-- ><><><><><><><><><><><><><><><>SHOW IF? <><><><><><><><><><><><><><>< -->
                                        <h4 class="titulo-forma">Color</h4>
                                        <div class="forma-box">
                                            <div class="forma">
                                                <a href="">Blue</a>
                                            </div>
                                            <div class="forma">
                                                <a href="">Grey</a>
                                            </div>
                                            <div class="forma">
                                                <a href="">Orange</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="carrito-box-buttons">
                                    <div class="carrito-box-add">
                                    <button class="button-add">ADD TO CART</button>
                                    </div>
                                    <div class="carrito-box-buy">
                                    <button class="button-buy">BUY PRODUCT</button>
                                    </div>
                                </div>    
                            </form>

                            <!-- FORMAS DE PAGO -->
                            <div class="formas-de-pago">
                                <h3 class="formas-de-pago-title">Secure checkout with</h3>
                                <div class="formas-de-pago-foto-box">
                                <div class="foto-formas-de-pago">
                                    <img class="foto-formas-de-pago-img" src="https://trust.conversionbear.com/../static/badges/americanexpress_1_color_card.svg" alt="">
                                </div>
                                <div class="foto-formas-de-pago">
                                    <img class="foto-formas-de-pago-img" src="https://trust.conversionbear.com/../static/badges/visa_1_color_card.svg" alt="">
                                </div>
                                <div class="foto-formas-de-pago">
                                    <img class="foto-formas-de-pago-img" src="https://trust.conversionbear.com/../static/badges/mastercard_color_card.svg" alt="">
                                </div>
                                <div class="foto-formas-de-pago">
                                    <img class="foto-formas-de-pago-img" src="https://trust.conversionbear.com/../static/badges/paypal_1_color_card.svg" alt="">
                                </div>
                            </div>
                            </div>

                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="product-description">
                <div class="descripcion-texto">
                   <% for( let i = 0; i < productDetail.description.length; i++ ) { %>
                     
