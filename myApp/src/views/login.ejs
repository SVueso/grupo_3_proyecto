<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>

    <h1>Login</h1>
    <div class="container">    
        <% if (typeof message!='undefined') { %>
         <p class="errores"><%= message %></p> 
        <% } %>
    <% if (typeof errores != 'undefined') { %>
        <% errores.forEach(error => { %>
            <p class="errores"><%= error.msg %></p>
        <% }) %>
    <% } %>  
        <form action="/user/processLogin" method="POST">
        <p>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder=" e.g. john-simpson@gmail.com">
        </p>
        <p>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="********">
        </p>
        <p>
            <input type="checkbox" id="rememberMe" name="rememberMe">
            <label for="rememberMe" class="rememberMe" >Remember Me</label>
        </p>
        <button type="submit">Login</button>
        </form>

        <div class="register">
            Click here to <a href="/user/register">Register</a>
        </div>  

 

    </div>
</body>
</html>