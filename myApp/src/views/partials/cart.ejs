<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/cart-style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- <script type= "text/javascript" src="../drawer.js"></script>  -->
    <title>Cart</title>
    
</head>
<body>
    
    <div id="myCart" class="cart">
        <div class="top-cart">
            <h2>Your Cart</h2>
            <a class="closebtn" href="javascript:void(0)" onclick="closeCart()">
                <i class="fas fa-times"></i>
            </a>
        </div>
        <div class="product-cart">
            <div class="one-quarter">
                <img src="https://cdn.shopify.com/s/files/1/0250/7217/3141/products/image_1024x1024.jpg?v=1571330349" alt="">
                </div>
            <div class="three-quarter">
                <p class="prod-name">Flopping Fish Cat Toy</p>
                <p class="prod-variant">GERALD</p>
                <div class="quantity-price-container">
                    <div class="quantity-cart">
                        <a href="">-</a>
                        <a href="">1</a>
                        <a href="">+</a>
                    </div>                
                    <div class="price">24.99</div>
                </div>                
            </div>
        </div>
        <div class="product-cart">
            <div class="one-quarter">
                <img src="https://cdn.shopify.com/s/files/1/0250/7217/3141/products/image_1024x1024.jpg?v=1571330349" alt="">
                </div>
            <div class="three-quarter">
                <p class="prod-name">Flopping Fish Cat Toy</p>
                <p class="prod-variant">GERALD</p>
                <div class="quantity-price-container">
                    <div class="quantity-cart">
                        <a href="">-</a>
                        <a href="">1</a>
                        <a href="">+</a>
                    </div>                
                    <div class="price">24.99</div>
                </div>                
            </div>
        </div>
        
        <div class="product-cart">
            <div class="one-quarter">
                <img src="https://cdn.shopify.com/s/files/1/0250/7217/3141/products/image_1024x1024.jpg?v=1571330349" alt="">
                </div>
            <div class="three-quarter">
                <p class="prod-name">Flopping Fish Cat Toy</p>
                <p class="prod-variant">GERALD</p>
                <div class="quantity-price-container">
                    <div class="quantity-cart">
                        <a href="">-</a>
                        <a href="">1</a>
                        <a href="">+</a>
                    </div>                
                    <div class="price">24.99</div>
                </div>                
            </div>
        </div>
        <div class="spacer"></div>
        <div class="footer-cart">
            <div class="subtotal-container">
                <h3>SUBTOTAL</h3>
                <h3>24.99</h3>
            </div>
            <div class="tax-msg">Taxes and shipping calculated at checkout</div>
            <button class="cart-btn">CHECKOUT</button>
        </div>
    </div> 
    <script>
        function openCart() {
          document.getElementById("myCart").style.display = "block";
        }
        
        function closeCart() {
          document.getElementById("myCart").style.display = "none";
        }
        </script>
</body>
</html>